@model AuthenticateRequest
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/css/login.css" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body class="theme2">
    <div class="container-fluid login-Section">
        <div class="row">
            <div class="col-md-6 leftSection">
                <img src="~/img/about-2.png" class="log-2"><hr>
                <div class="logo-text">Software</div>
                <div class="footer-leftside">
                    <ul>
                        <li>
                            <i class="material-icons">widgets</i>
                            <span class="footer-labels">Inovation</span>
                        </li>
                        <li>
                            <i class="material-icons">verified_user</i>
                            <span class="website">Creation</span>
                        </li>
                        <li>
                            <i class="material-icons">contact_phone</i>
                            <span class="copyright">Support</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 aside">
                @*<img src="~/img/girme-logo.png" class="logo">*@
                <div class="login-form">

                    <span class="loginText">Login</span>
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <div class="row">
                            <div class="form-group col-md-9">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input id="login-username" asp-for="Email" type="text" class="form-control" value="" placeholder="username or email">
                                </div>
                            </div>
                            <small><span asp-validation-for="Email" class="text-danger"></span></small>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-9">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input id="login-password" type="password" asp-for="Password" class="form-control" name="password" placeholder="password">
                                </div>
                            </div>
                            <small><span asp-validation-for="Password" class="text-danger"></span></small>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-9 forgotpass-Link">
                                <input type="submit" class="btnSubmit" value="Login" />
                                <a href="#" class="ForgetPwd" data-toggle="modal" data-target="#myModal">Forget Password?</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">

                            </div>
                        </div>

                    </form>
                </div>
                <div class="footer">
                    <ul>
                        <li>
                            <i class="material-icons">call</i>
                            <span class="footer-labels">+020 66224455</span>
                        </li>
                        <li>
                            <i class="material-icons">language</i>
                            <span class="website">www.demo.com</span>
                        </li>
                        <li>
                            <i class="material-icons">copyright</i>
                            <span class="copyright">Copy Right 2021</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<!-------------------------Forgot Password---------------------->


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Forgot Password</h4>
            </div>
            <div class="modal-body">
                <div class="forgot-password-table">
                    <div class="loginTable">
                        <div class="resetPassword">
                            <div class="emailAddress">
                                <div class="form_text1">
                                    <span id="lblEmailId">Email Address:</span>
                                    <span class="red_mandatory_star">*</span>
                                </div>
                                <div>
                                    <input name="txtEmailId" type="text" id="txtEmailId" class="inputbox_forgetpassword form-control">
                                    <span id="errEmailId" style="color:Red;display:none;"></span>
                                    <span id="revEmail" style="color:Red;display:none;"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input id="btnCancel" type="button" value="Cancel" data-dismiss="modal" class="buttons cancelBtn cancel-reset-btn">
                <input type="submit" name="btnSubmit" value="Reset" id="btnSubmit" class="buttons resetBtn cancel-reset-btn">
            </div>
        </div>

    </div>
</div>