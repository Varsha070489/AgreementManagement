@{
}


<div class="col-md-6 aside">

    <div class="login-form">

        <span class="loginText">Register</span>
        <form asp-action="RegisterUser" asp-controller="Account" method="post">


            <div class="row">
                <div class="form-group col-md-9">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="register-title" asp-for="Title" type="text" class="form-control" value="" placeholder="Title">
                    </div>
                </div>
                <small><span asp-validation-for="Title" class="text-danger"></span></small>
            </div>


            <div class="row">
                <div class="form-group col-md-9">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="register-FirstName" asp-for="FirstName" type="text" class="form-control" value="" placeholder="First Name">
                    </div>
                </div>
                <small><span asp-validation-for="FirstName" class="text-danger"></span></small>
            </div>

            <div class="row">
                <div class="form-group col-md-9">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="register-LastName" asp-for="LastName" type="text" class="form-control" value="" placeholder="Last Name">
                    </div>
                </div>
                <small><span asp-validation-for="LastName" class="text-danger"></span></small>
            </div>


            <div class="row">
                <div class="form-group col-md-9">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="register-username" asp-for="Email" type="text" class="form-control" value="" placeholder="username or email">
                    </div>
                </div>
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>

            <div class="row">
                <div class="form-group col-md-9">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="register-password" type="password" asp-for="Password" class="form-control" name="password" placeholder="password">
                    </div>
                </div>
                <small><span asp-validation-for="Password" class="text-danger"></span></small>
            </div>



            <div class="row">
                <div class="form-group col-md-9">
                    <div style="margin-bottom: 25px" class="input-group">

                        <select id="register-roles" class="form-control" name="RoleId" placeholder="Roles">
                            @foreach (var item in @Model.Roles)
                            {
                                <option value="@item.Key">@item.Value</option>
                            }

                        </select>
                    </div>
                </div>
                <small><span asp-validation-for="Password" class="text-danger"></span></small>
            </div>

            <div class="row">
                <div class="form-group col-md-9 forgotpass-Link">
                    <input type="submit" class="btnSubmit" value="Register" />

                </div>
            </div>



        </form>
    </div>

</div>